
# ============================================================================
# FREE LLM PROVIDER CONFIGURATION (Added 2026-01-18)
# ============================================================================

# Primary LLM Provider (groq, huggingface, openrouter, ollama, mock)
PROMPTLANG_PRIMARY_PROVIDER=groq

# ============================================================================
# API Keys - Get FREE tier keys from:
# - Groq: https://console.groq.com (1K req/day)
# - HuggingFace: https://huggingface.co/settings/tokens (2K req/mo)
# - OpenRouter: https://openrouter.ai/keys (varies by model)
# ============================================================================

GROQ_API_KEY=your_groq_api_key_here
HF_TOKEN=your_huggingface_token_here
OPENROUTER_API_KEY=your_openrouter_key_here

# ============================================================================
# Ollama Configuration (if using local LLM)
# ============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# ============================================================================
# Provider Settings
# ============================================================================

PROMPTLANG_MAX_RETRIES=3
PROMPTLANG_RETRY_DELAY=1.0
PROMPTLANG_TIMEOUT=30
PROMPTLANG_ENABLE_RESPONSE_CACHE=true
PROMPTLANG_CACHE_TTL=3600
